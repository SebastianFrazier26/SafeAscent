# SafeAscent Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_DB=safeascent
POSTGRES_USER=safeascent
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Full database URL (auto-constructed in docker-compose, but needed for local dev)
DATABASE_URL=postgresql+asyncpg://safeascent:your_secure_password_here@localhost:5432/safeascent

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API Configuration
# =============================================================================
BACKEND_PORT=8000

# Comma-separated list of allowed CORS origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# =============================================================================
# Frontend Configuration
# =============================================================================
FRONTEND_PORT=3000

# Backend API URL (used during frontend build)
VITE_API_BASE_URL=http://localhost:8000/api/v1

# Mapbox Token (required for map display)
# Get yours at: https://www.mapbox.com/
VITE_MAPBOX_TOKEN=your_mapbox_token_here

# =============================================================================
# External APIs
# =============================================================================
# Open-Meteo API (free tier, no key required for basic usage)
OPEN_METEO_API_KEY=

# =============================================================================
# Algorithm Configuration
# =============================================================================
# Use vectorized (NumPy) algorithm for better performance
USE_VECTORIZED_ALGORITHM=true

# =============================================================================
# Production Settings
# =============================================================================
# SECRET_KEY=generate_a_secure_random_key_here
# DEBUG=false
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
